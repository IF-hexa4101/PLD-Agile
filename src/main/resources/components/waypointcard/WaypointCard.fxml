<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.Double?>
<fx:root fx:id="root" prefHeight="80.0" prefWidth="250.0"
         stylesheets="/components/waypointcard/WaypointCard.css"
         type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.65"
         xmlns:fx="http://javafx.com/fxml/1">
  <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
    <Label text="${controller.waypointName}" GridPane.columnIndex="0"
           GridPane.rowIndex="0"/>
    <HBox>
      <Label text="Coordinates"/>
      <Label text="${controller.coordinates}" GridPane.columnIndex="1"
             GridPane.rowIndex="1"/>
    </HBox>
    <AnchorPane fx:id="timeConstraints" visible="false" managed="false">
      <GridPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                             prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                             prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
          <Label text="Time constraint start" GridPane.columnIndex="0"
                 GridPane.rowIndex="0"/>
          <Label text="10h" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
          <Label text="Time constraint end" GridPane.columnIndex="0"
                 GridPane.rowIndex="1"/>
          <Label text="20h" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </children>
      </GridPane>
    </AnchorPane>
  </VBox>
  <AnchorPane AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8">
    <Button fx:id="edit" graphicTextGap="2.0" mnemonicParsing="false"
            onAction="#onEditButtonAction" AnchorPane.rightAnchor="32"
            AnchorPane.topAnchor="0">
      <graphic>
        <FontIcon iconLiteral="gmi-edit" scaleX="0.75" scaleY="0.75"/>
      </graphic>
    </Button>
    <Button fx:id="remove" graphicTextGap="2.0" mnemonicParsing="false"
            onAction="#onRemoveButtonAction" AnchorPane.rightAnchor="0"
            AnchorPane.topAnchor="0">
      <graphic>
        <FontIcon iconLiteral="gmi-clear"/>
      </graphic>
    </Button>
  </AnchorPane>
</fx:root>
